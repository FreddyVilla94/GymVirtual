<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            android:text="Superior Train"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:background="@color/colorS"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Inferior Train"
            android:textColor="@color/colorBlack"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:background="@color/colorI"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

    </GridLayout>
    <ListView
        android:layout_below="@+id/grid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listExerciseRoutine"

        />
    <RelativeLayout
        android:id="@+id/relative1"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft= "@dimen/activity_horizontal_margin"
        android:paddingRight = "@dimen/activity_horizontal_margin"
        android:paddingTop = "@dimen/activity_vertical_margin"
        android:paddingBottom = "@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/textEditRepetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter new repetitions"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:layout_below="@+id/textEditRepetitions"
            android:id="@+id/editNewRepetitions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textEditDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter the minutes of duration"
            android:layout_below="@+id/editNewRepetitions"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:layout_below="@+id/textEditDuration"
            android:id="@+id/editNewDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textEditSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter new series"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/editNewDuration"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:layout_below="@+id/textEditSeries"
            android:id="@+id/editNewSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textAlignment="center"
            />
        <TextView
            android:id="@+id/textEditWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Enter new weight"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/editNewSeries"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:layout_below="@+id/textEditWeight"
            android:id="@+id/editNewWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:textAlignment="center"
            />

    </RelativeLayout>

</RelativeLayout>